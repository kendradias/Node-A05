<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0"><%= project.title %></h1>
                    <div>
                        <a href="/projects/<%= project._id %>/edit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/projects/<%= project._id %>/delete" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
                <p class="lead mt-2"><%= project.summary %></p>
            </div>

            <div class="card mb-4 shadow">
                <img 
                    src="<%= project.screenshot %>" 
                    class="card-img-top" 
                    alt="<%= project.title %>"
                >
                <div class="card-body">
                    <h5 class="card-title">Project Description</h5>
                    <p class="card-text"><%= project.description %></p>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Technologies Used</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap">
                        <% project.tech.forEach(tech => { %>
                            <span class="badge bg-primary me-2 mb-2 p-2"><%= tech %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Project Info</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Created:</strong>
                        <span class="float-end">
                            <%= new Date(project.createdAt).toLocaleDateString() %>
                        </span>
                    </li>
                    <% if (project.updatedAt && project.updatedAt !== project.createdAt) { %>
                        <li class="list-group-item">
                            <strong>Last Updated:</strong>
                            <span class="float-end">
                                <%= new Date(project.updatedAt).toLocaleDateString() %>
                            </span>
                        </li>
                    <% } %>
                </ul>
            </div>

            <div class="mt-4">
                <a href="/projects" class="btn btn-secondary w-100">
                    <i class="fas fa-arrow-left"></i> Back to Projects
                </a>
            </div>
        </div>
    </div>
</div>