<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Project</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this project?
                    </div>
                    
                    <div class="project-details mb-4">
                        <h3><%= project.title %></h3>
                        <p><%= project.summary %></p>
                        
                        <% if (project.screenshot) { %>
                            <div class="project-image mb-3">
                                <img 
                                    src="<%= project.screenshot %>" 
                                    alt="<%= project.title %>" 
                                    class="img-thumbnail" 
                                    style="max-height: 200px;"
                                >
                            </div>
                        <% } %>
                    </div>
                    
                    <form action="/projects/<%= project._id %>/delete" method="POST">
                        <div class="d-flex justify-content-between">
                            <a href="/projects/<%= project._id %>" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>